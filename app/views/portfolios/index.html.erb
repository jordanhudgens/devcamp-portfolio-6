<h1>Portfolio Items</h1>

<%= link_to "Create new item", new_portfolio_path %>

<a href="portfolios/new">Create new item</a>
<% @portfolio_items.each do |portfolio_items| %>
<p><%= link_to portfolio_items.title,portfolio_path(portfolio_items) %></p>
<p><%= portfolio_items.subtitle %></p>
<p><%= portfolio_items.body %></p>
<p><%= portfolio_items.thumb_image %></p>
<%=image_tag portfolio_items.thumb_image unless portfolio_items.thumb_image.nil?%>
<%= link_to "Edit", edit_portfolio_path(portfolio_items.id) %>
<%= link_to "Delete Portfolio", portfolio_path(portfolio_items), method: :delete, data: {confirm: "Are you sure"} %>
<% end %>
